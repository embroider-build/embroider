{
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:embroider-build/embroider.git"
  },
  "scripts": {
    "clean": "git clean -x -f",
    "compile": "tsc",
    "lint": "eslint . --cache",
    "prepare": "tsc",
    "test": "cd tests/scenarios && pnpm test"
  },
  "jest": {
    "projects": [
      "<rootDir>/packages/*",
      "<rootDir>/test-packages/"
    ]
  },
  "devDependencies": {
    "@types/jest": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^24.9.0",
    "prettier": "^2.3.1",
    "release-it": "^14.2.1",
    "release-it-lerna-changelog": "^3.1.0",
    "release-it-yarn-workspaces": "^2.0.0",
    "typescript": "4.4.2"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      },
      "release-it-yarn-workspaces": {
        "workspaces": [
          "packages/*"
        ],
        "additionalManifests": {
          "dependencyUpdates": [
            "test-packages/*/package.json",
            "tests/**/package.json"
          ]
        }
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  },
  "packageManager": "pnpm@7.1.7",
  "pnpm": {
    "overrides": {
      "browserslist": "^4.14.0",
      "qunit": "^2.14.1",
      "@types/eslint": "7.29.0"
    },
    "overrides-notes": {
      "@types/eslint": "webpack brings in @types/eslint@8, which breaks our type checking"
    }
  },
  "volta": {
    "node": "14.19.3"
  },
  "version": "1.7.1"
}
