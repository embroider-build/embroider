{
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:embroider-build/embroider.git"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "test-packages/*",
      "test-packages/@embroider/*",
      "types/babel-core",
      "types/@babel__traverse",
      "types/broccoli-funnel",
      "types/broccoli-concat",
      "types/ember-cli-htmlbars",
      "tests/scenarios",
      "tests/app-template",
      "tests/addon-template",
      "tests/v2-addon-template"
    ],
    "nohoist": [
      "**/@types/broccoli-plugin"
    ]
  },
  "scripts": {
    "clean": "git clean -x -f",
    "compile": "tsc",
    "lint": "eslint . --cache",
    "prepare": "tsc",
    "test": "node ./test-packages/support/suite-setup-util.js --emit && jest"
  },
  "jest": {
    "projects": [
      "<rootDir>/packages/*",
      "<rootDir>/test-packages/"
    ]
  },
  "resolutions": {
    "**/browserslist": "^4.14.0",
    "**/qunit": "^2.14.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^24.9.0",
    "prettier": "^2.3.1",
    "release-it": "^14.2.1",
    "release-it-lerna-changelog": "^3.1.0",
    "release-it-yarn-workspaces": "^2.0.0",
    "typescript": "4.4.2"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      },
      "release-it-yarn-workspaces": {
        "workspaces": [
          "packages/*"
        ],
        "additionalManifests": {
          "dependencyUpdates": [
            "test-packages/*/package.json",
            "tests/**/package.json"
          ]
        }
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  },
  "volta": {
    "node": "12.22.5",
    "yarn": "1.22.11"
  },
  "version": "1.2.0"
}
