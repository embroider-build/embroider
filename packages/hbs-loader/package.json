{
  "name": "@embroider/hbs-loader",
  "version": "3.0.2",
  "private": false,
  "description": "Glimmer handlebars loader for webpack",
  "repository": {
    "type": "git",
    "url": "https://github.com/embroider-build/embroider.git",
    "directory": "packages/hbs-loader"
  },
  "license": "MIT",
  "author": "Edward Faulkner",
  "main": "src/index.js",
  "files": [
    "src/**/*.js",
    "src/**/*.d.ts",
    "src/**/*.js.map"
  ],
  "scripts": {
    "build": "concurrently 'npm:build:*'",
    "build:js": "rollup -c ./rollup.config.mjs",
    "build:types": "build-types",
    "start": "pnpm build:js --watch",
    "prepack": "pnpm -w exec turbo --filter '@embroider/hbs-loader' build"
  },
  "dependencies": {},
  "devDependencies": {
    "@embroider/build": "workspace:*",
    "@embroider/core": "workspace:^",
    "@types/node": "^15.12.2",
    "typescript": "^5.1.6",
    "webpack": "^5"
  },
  "peerDependencies": {
    "@embroider/core": "workspace:^",
    "webpack": "^5"
  },
  "engines": {
    "node": "12.* || 14.* || >= 16"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
