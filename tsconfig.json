{
  "include": [
    "./packages/*/src/**/*.ts",
    "./packages/*/tests/**/*.ts",
    "./test-packages/support/**/*.ts",
    "./test-packages/release/src/**/*.ts",
  ],
  "extends": "./tsconfig-base.json",
  "exclude": [
    "node_modules",
    "packages/*/tmp",
    "packages/*/dist",
    "packages/*/node_modules",
    "test-packages/*/tmp",
    "test-packages/*/dist",
    "test-packages/*/node_modules",
    "tmp",
    "packages/config-meta-loader/src",
    "packages/router/src",
    "packages/vite",
    "packages/template-tag-codemod",
    "packages/compat"
  ],
  "references": [
    { "path": "packages/compat" },
    { "path": "packages/config-meta-loader" },
    { "path": "packages/vite" },
    { "path": "packages/template-tag-codemod" },
    { "path": "tests/scenarios" },
  ]
}
