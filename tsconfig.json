{
  "include": ["./packages/*/src/**/*.ts", "./packages/*/tests/**/*.ts", "./test-packages/support/**/*.ts"],
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "typeRoots": ["node_modules/@types", "types"],
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowUnreachableCode": false,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "packages/*/tmp",
    "packages/*/dist",
    "test-packages/*/tmp",
    "test-packages/*/dist",
    "tmp",
  ]
}
