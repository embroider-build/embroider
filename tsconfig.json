{
  "include": ["./packages/*/src/**/*.ts"],
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "typeRoots": ["node_modules/@types", "types"],
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowUnreachableCode": false
  },
  "exclude": [
    "node_modules",
    "packages/*/tmp",
    "packages/*/dist"
  ]
}
