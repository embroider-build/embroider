{
  "extends": "./tsconfig-base",
  "include": [
    "./packages/*/src/**/*.ts",
    "./packages/*/tests/**/*.ts",
    "./test-packages/support/**/*.ts",
    "./test-packages/release/src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "packages/*/tmp",
    "packages/*/dist",
    "packages/*/node_modules",
    "test-packages/*/tmp",
    "test-packages/*/dist",
    "test-packages/*/node_modules",
    "tmp",
    "tests/scenarios/output",
    "packages/router/src"
  ]
}
